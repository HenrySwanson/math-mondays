{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "jest",
        ],
        "lib": [
            "es2016"
        ],
        "sourceMap": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
    ],
}